@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.com/> .

ex:StudentMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "student.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/student/{ID}";
        rr:class ex:Student
    ];
    rr:predicateObjectMap [
        rr:predicate ex:name;
        rr:objectMap [ rml:reference "Name" ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:sport;
        rr:objectMap [ 
            rr:parentTriplesMap ex:SportMapping;
            rr:joinCondition [
                rr:child "Sport";
                rr:parent "ID"
            ]
        ]
    ].

ex:SportMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "sport.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/sport/{ID}";
        rr:class ex:Sport
    ];
    rr:predicateObjectMap [
        rr:predicate ex:name;
        rr:objectMap [ rml:reference "Name" ]
    ].
