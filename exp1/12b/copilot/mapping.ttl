@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.com/> .

ex:PersonMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "persons.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/person/{fname}_{lname}";
        rr:class ex:Person
    ];
    rr:predicateObjectMap [
        rr:predicate ex:amount;
        rr:objectMap [ rml:reference "amount" ]
    ].

ex:CityMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "lives.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/person/{fname}_{lname}";
        rr:class ex:Person
    ];
    rr:predicateObjectMap [
        rr:predicate ex:lives_in;
        rr:objectMap [ rml:reference "city" ]
    ].
