@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.com/> .

ex:PersonMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "persons.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/person/{fname}_{lname}";
        rr:class ex:Person
    ];
    rr:predicateObjectMap [
        rr:predicate ex:fname;
        rr:objectMap [ rml:reference "fname" ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:lname;
        rr:objectMap [ rml:reference "lname" ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:amount;
        rr:objectMap [ rml:reference "amount" ]
    ].

ex:TransactionMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "persons.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/transaction/{fname}_{lname}_{amount}";
        rr:class ex:Transaction
    ];
    rr:predicateObjectMap [
        rr:predicate ex:hasSender;
        rr:objectMap [ rr:parentTriplesMap ex:PersonMapping ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:hasReceiver;
        rr:objectMap [ rr:parentTriplesMap ex:PersonMapping ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:amount;
        rr:objectMap [ rml:reference "amount" ]
    ].
