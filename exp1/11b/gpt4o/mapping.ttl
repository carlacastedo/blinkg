@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.org/> .

### Mapping for Students
ex:StudentMapping a rml:LogicalSource ;
    rml:source "student.csv" ;
    rml:referenceFormulation ql:CSV ;
    rr:subjectMap [
        rr:template "http://example.org/student/{ID}" ;
        rr:class ex:Student ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:firstName ;
        rr:objectMap [ rml:reference "FirstName" ] ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:lastName ;
        rr:objectMap [ rml:reference "LastName" ] ;
    ] .

### Mapping for Sports
ex:SportMapping a rml:LogicalSource ;
    rml:source "sport.csv" ;
    rml:referenceFormulation ql:CSV ;
    rr:subjectMap [
        rr:template "http://example.org/sport/{ID}" ;
        rr:class ex:Sport ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:description ;
        rr:objectMap [ rml:reference "Description" ] ;
    ] .

### Mapping for Relationships between Students and Sports
ex:StudentSportMapping a rml:LogicalSource ;
    rml:source "student_sport.csv" ;
    rml:referenceFormulation ql:CSV ;
    rr:subjectMap [
        rr:template "http://example.org/student/{ID_Student}" ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:playsSport ;
        rr:objectMap [
            rr:template "http://example.org/sport/{ID_Sport}" ;
        ] ;
    ] .
