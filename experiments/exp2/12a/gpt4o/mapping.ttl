@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.org/#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .

# RML Mapping
<#PersonsMapping>
    rml:logicalSource [
        rml:source "persons.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;

    rr:subjectMap [
        rr:template "http://example.org/#Person{fname}_{lname}" ;
        rr:class ex:Person
    ] ;

    rr:predicateObjectMap [
        rr:predicate ex:firstname ;
        rr:objectMap [ rml:reference "fname" ; rr:datatype xsd:string ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate ex:lastname ;
        rr:objectMap [ rml:reference "lname" ; rr:datatype xsd:string ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate ex:owes ;
        rr:objectMap [ rml:reference "amount" ; rr:datatype xsd:double ]
    ] .
