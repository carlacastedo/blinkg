@prefix rml: <http://w3id.org/rml/> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://example.org/#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .

# Mapping Person Data from student.csv
<#StudentMapping>
    rml:logicalSource [
        rml:source "student.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    rr:subjectMap [
        rr:template "http://example.org/person/{ID}" ;
        rr:class ex:Person ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:id ;
        rr:objectMap [ rml:reference "ID" ; rr:datatype xsd:integer ]
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:firstname ;
        rr:objectMap [ rml:reference "FirstName" ; rr:datatype xsd:string ]
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:lastname ;
        rr:objectMap [ rml:reference "LastName" ; rr:datatype xsd:string ]
    ] .

# Mapping Sport Data from sport.csv
<#SportMapping>
    rml:logicalSource [
        rml:source "sport.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    rr:subjectMap [
        rr:template "http://example.org/sport/{ID}" ;
        rr:class ex:Sport ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:sportid ;
        rr:objectMap [ rml:reference "ID" ; rr:datatype xsd:integer ]
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:sportname ;
        rr:objectMap [ rml:reference "Description" ; rr:datatype xsd:langString ]
    ] .

# Mapping Relationships from student_sport.csv
<#StudentSportMapping>
    rml:logicalSource [
        rml:source "student_sport.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    rr:subjectMap [
        rr:template "http://example.org/person/{ID_Student}" ;
        rr:class ex:Person ;
    ] ;
    rr:predicateObjectMap [
        rr:predicate ex:practises ;
        rr:objectMap [
            rr:template "http://example.org/sport/{ID_Sport}" ;
        ] ;
    ] .
