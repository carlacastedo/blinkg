@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.com/> .

# Mapping for students
ex:StudentMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "student.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/student/{ID}";
        rr:class ex:Student
    ];
    rr:predicateObjectMap [
        rr:predicate ex:firstName;
        rr:objectMap [ rml:reference "FirstName" ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:lastName;
        rr:objectMap [ rml:reference "LastName" ]
    ].

# Mapping for sports
ex:SportMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "sport.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/sport/{ID}";
        rr:class ex:Sport
    ];
    rr:predicateObjectMap [
        rr:predicate ex:description;
        rr:objectMap [ rml:reference "Description" ]
    ].

# Mapping for student-sport relationships
ex:StudentSportMapping a rr:TriplesMap;
    rml:logicalSource [
        rml:source "student_sport.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.com/student/{ID_Student}";
        rr:class ex:Student
    ];
    rr:predicateObjectMap [
        rr:predicate ex:isEnrolledIn;
        rr:objectMap [ 
            rr:parentTriplesMap ex:SportMapping;
            rr:joinCondition [
                rr:child "ID_Sport";
                rr:parent "ID"
            ]
        ]
    ].
