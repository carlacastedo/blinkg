@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix ex: <http://example.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

<#Mapping> 
    rml:logicalSource [
        rml:source "persons.csv";
        rml:referenceFormulation ql:CSV
    ];
    rr:subjectMap [
        rr:template "http://example.org/Person/{fname}_{lname}";
        rr:class ex:Person
    ];
    rr:predicateObjectMap [
        rr:predicate foaf:givenName;
        rr:objectMap [ rml:reference "fname" ]
    ];
    rr:predicateObjectMap [
        rr:predicate foaf:familyName;
        rr:objectMap [ rml:reference "lname" ]
    ];
    rr:predicateObjectMap [
        rr:predicate ex:hasAmount;
        rr:objectMap [ rml:reference "amount" ]
    ] .
